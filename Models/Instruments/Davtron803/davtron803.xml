<PropertyList>

  <path>Davtron803.ac</path>
  
  <animation>
    <!-- buttons and overall instrument -->
    <object-name>face</object-name>
    <object-name>lcd</object-name>
    <object-name>oat.swt</object-name>
    <object-name>select.button</object-name> <!--reset btn-->
    <object-name>control.button</object-name><!--start, pause, stop-btn-->
  </animation>

  <animation>
    <type>material</type>
    <object-name>lcd</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.8 </green>
      <blue>  0.4 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
    </emission>
  </animation>

