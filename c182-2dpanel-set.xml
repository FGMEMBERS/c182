<?xml version="1.0"?>
<!--
************************************************************************
JSBSim Cessna 182 with 2D panel.
************************************************************************
-->

<PropertyList include="c182-set.xml">

 <sim>
  <variant-of>c182</variant-of>
  <description>Cessna 182 (2D panel)</description>

  <!-- Use a 2D instrument panel -->

  <panel>
   <path>Aircraft/c182/Panels/c182s-panel.xml</path>
   <visibility archive="y">true</visibility>
  </panel>
  <panel_2>
   <path>Aircraft/c182/Panels/c182-trans-mini-panel.xml</path>
  </panel_2>

  <!-- Look down a bit over the top of the panel -->

  <view>
   <internal archive="y">false</internal>
   <config>
     <pitch-offset-deg>-8</pitch-offset-deg>
   </config>
  </view>

  <help>
   <title>Cessna 182</title>
  </help>

 </sim>

</PropertyList>
