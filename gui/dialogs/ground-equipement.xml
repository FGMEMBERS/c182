<PropertyList>

    <name>ground-equipement</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>


    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Ground Equipement</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
	</button>
	</group>
	<hrule/>
    

	
<group>
                <layout>hbox</layout>
		
		
                <radio>
                    <halign>left</halign>
                <label>Place ladder left wing</label>
                        <live>true</live>
		<property>/sim/ladder/left</property>
			<enable>
                                <less-than>
                                    <property>velocities/groundspeed-kt</property>
                                    <value>0.1</value>
                                </less-than>
			</enable>
	<binding>
                    <command>property-toggle</command>
		<property>/sim/ladder/left</property>
                </binding>
               <binding>
                    <command>property-assign</command>
		<property>/sim/ladder/enable</property>
		<value>true</value>
                </binding>
	<binding>
                    <command>dialog-update</command>
                </binding>
	</radio>

                <radio>
                    <halign>right</halign>
                <label>Place ladder right wing</label>
                        <live>true</live>
		<property>/sim/ladder/right</property>
			<enable>
                                <less-than>
                                    <property>velocities/groundspeed-kt</property>
                                    <value>0.1</value>
                                </less-than>
			</enable>
	<binding>
                    <command>property-toggle</command>
		<property>/sim/ladder/right</property>
                  </binding>
               <binding>
                    <command>property-assign</command>
		<property>/sim/ladder/enable</property>
		<value>true</value>
                </binding>
	<binding>
                    <command>dialog-update</command>
                </binding>
	</radio>
        </group>
        <hrule/>

	
	
<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Place Ground Power Unit</label>
                        <live>true</live>
		<property>/sim/gpu/enable</property>
			<enable>
                                <less-than>
                                    <property>velocities/groundspeed-kt</property>
                                    <value>0.1</value>
                                </less-than>
			</enable>
               <binding>
                    <command>property-toggle</command>
		<property>/sim/gpu/enable</property>
                </binding>
	<binding>
                    <command>dialog-update</command>
                </binding>
	</checkbox>
        </group>

	
<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Connect Groud Power Unit</label>
                        <live>true</live>
		<property>/controls/electric/external-power</property>
	<enable>
		<property>/sim/gpu/enable</property>
	</enable>
               <binding>
                    <command>property-toggle</command>
		<property>/controls/electric/external-power</property>
                </binding>
	<binding>
                    <command>dialog-update</command>
                </binding>
	</checkbox>
        </group>
        <hrule/>
  
</PropertyList>
